<h2>--- CRUD Products ---</h2>

<div class="container text-center">
    <div class="container mb-5">
        <div class="row">
            <form id="form-inputs">
                <div class="mb-3">
                    <label class="form-label">Name: </label>
                    <input type="text" class="fomr-control" id="inputName" placeholder="Name">
                </div>
                <div class="mb-3">
                    <label class="form-label">Price: </label>
                    <input type="float" class="fomr-control" id="inputPrice" placeholder="Price">
                </div>
                <div class="mb-3">
                    <label class="form-label">Stock: </label>
                    <input type="number" class="fomr-control" id="inputStock" placeholder="Stock">
                </div>
                <div class="mb-3">
                    <label class="form-label">Description: </label>
                    <input type="text" class="fomr-control" id="inputDescrip" placeholder="Description">
                </div>
                <button type="submit" class="btn btn-primary" id="btnAdd">Add</button>
            </form>
        </div>
        <hr>
        <table class="table table-bordered" id="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody id="data"></tbody>
        </table>
    </div>
</div>

